<div class="sign-in-div">
    <h3>
        Sign In
    </h3>
    <div class="option-of-login">
        <div id="stud">
            <p>Student</p>
        </div>
        <div id="comp">
            <p>Company</p>
        </div>
    </div>
    <div id="default-form">
        <div id="student">
            <form action="/student/create-session" method="POST">
                <div class="text-input">
                    <label for="Email">Student Email</label>
                    <input type="email" name="email" placeholder="Enter your email" required id="Email">
                </div>
                <div class="text-input">
                    <label for="Password">Password</label>
                    <input type="password" name="password" placeholder="Enter your password" required id="Password">
                </div>
                <input type="hidden" name="signInType" value="student">
                <div class="submit">
                    <input type="submit" value="Sign In">
                </div>
            </form>
        </div>

        <div id="company">
            <form action="/company/create-session" method="POST">
                <div class="text-input">
                    <label for="Email">Company Email</label>
                    <input type="text" name="email" placeholder="Enter your email" required id="">
                </div>
                <div class="text-input">
                    <label for="Password">Password</label>
                    <input type="password" name="password" placeholder="Enter your password" required id="Password">
                </div>
                <input type="hidden" name="signInType" value="company">
                <div class="submit">
                    <input type="submit" value="Sign In">
                </div>
            </form>
        </div>
        <div id="sign-up-create">Don't have an account? <a href="/sign-up">Create new Account</a></div>
    </div>
</div>
</div>



