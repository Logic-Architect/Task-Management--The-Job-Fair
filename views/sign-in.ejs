<link rel="stylesheet" href="/css/sign-in.css">
<div class="sign-in">
    <h1>
        Sign In
    </h1>
    <div class="type">
        <div id="stud">
            <p>as Student</p>
        </div>
        <div id="comp">
            <p>as Company</p>
        </div>
    </div>

    <div id="student">
        <form action="/student/create-session" method="POST">
            <div class="text-input">
                <label for="Email">Student Email</label>
                <input type="email" name="email" placeholder="Enter your email" required id="Email">
            </div>
            <div class="text-input">
                <label for="Password">Password</label>
                <input type="password" name="password" placeholder="Enter your password" required id="Password">
            </div>
            <input type="hidden" name="signInType" value="student">
            <div class="submit">
                <input type="submit" value="Sign In">
            </div>
        </form>
    </div>

    <div id="company">
        <form action="/company/create-session" method="
        POST">
            <div class="text-input">
                <label for="Email">Company Email</label>
                <input type="email" name="email" placeholder="Enter your email" required id="Email">
            </div>
            <div class="text-input">
                <label for="Password">Password</label>
                <input type="password" name="password" placeholder="Enter your password" required id="Password">
            </div>
            <input type="hidden" name="signInType" value="company">
            <div class="submit">
                <input type="submit" value="Sign In">
            </div>
        </form>
    </div>
</div>
<script type="text/javascript" src="/js/sign-in.js"></script>