<link rel="stylesheet" href="/css/author/author-sign-up.css">
<div class="sign-in-center">
    <div class="sign-up-modal animate__animated animate__zoomInDown">
        <div>
            <p>
                Sign Up
            </p>
        </div>
        <div class="sign-up-form">
            <form action="/author/verify" method="POST">
                <div class="email-sec">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" required placeholder="Enter Your Email">
                </div>
                <div class="username-sec">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username" required placeholder="Enter Your User Name">
                </div>
                <div class="desig-sec">
                    <label for="designation">Designation</label>
                    <input type="text" name="designation" id="designation" required placeholder="Enter Your Designation">
                </div>
                <div class="phone">
                    <label for="phone">Contact No</label>
                    <input type="text" name="phone" id="phone" required placeholder="WhatsApp Contact No.">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required placeholder="Enter Your Password">
                </div>
                <div>
                    <label for="confirm_password">Confirm Password</label>
                    <input type="confirm_password" name="confirm_password" id="confirm_password" placeholder="Re Enter Your Passwods">
                </div>
                <input type="submit" value="Request Security Key">
            </form>
        </div>
        <div class="sign-up">
            <a href="/author/secure-key">Already Have a Secure Key</a>
        </div>
    </div>
</div>
<script src="/js/author/author-sign-up.js"></script>